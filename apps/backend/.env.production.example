# Environment
ENVIRONMENT=production

# Application
APP_NAME="FastAPI Backend"
APP_DESCRIPTION="FastAPI backend application"
APP_VERSION="1.0.0"
DEBUG=false

# Server
HOST="0.0.0.0"
PORT=8000

# CORS - Configure allowed origins for production
# Example: CORS_ORIGINS='["https://yourdomain.com", "https://www.yourdomain.com"]'
CORS_ORIGINS='["https://yourdomain.com"]'
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS='["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]'
CORS_ALLOW_HEADERS='["*"]'

# Database - Use PostgreSQL in production
# Example: DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/dbname"
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/app"
DATABASE_ECHO=false

# JWT Authentication - IMPORTANT: Change these values in production!
JWT_SECRET_KEY="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
