# Environment (development, production, test)
ENVIRONMENT=development

# Application
APP_NAME="FastAPI Backend"
APP_DESCRIPTION="FastAPI backend application"
APP_VERSION="0.0.0"
DEBUG=false

# Server
HOST="0.0.0.0"
PORT=8000

# CORS
CORS_ORIGINS='["http://localhost:3000"]'
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS='["*"]'
CORS_ALLOW_HEADERS='["*"]'

# Database
# SQLite (development)
DATABASE_URL="sqlite+aiosqlite:///./data/app.db"
# PostgreSQL (production) - uncomment and configure for production
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/dbname"
DATABASE_ECHO=false

# JWT Authentication (REQUIRED - no default value)
# Generate a secure key: openssl rand -base64 32
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_AUTH_REQUESTS=20
RATE_LIMIT_AUTH_WINDOW=60
RATE_LIMIT_GRAPHQL_REQUESTS=50
RATE_LIMIT_GRAPHQL_WINDOW=60

# GraphQL Security
GRAPHQL_MAX_DEPTH=10
GRAPHQL_MAX_COMPLEXITY=100

# S3 Storage (SeaweedFS for local development)
S3_ENDPOINT_URL="http://localhost:8333"
S3_ACCESS_KEY_ID="admin"
S3_SECRET_ACCESS_KEY="admin"
S3_BUCKET_NAME="uploads"
S3_REGION="us-east-1"
S3_USE_SSL=false
S3_MAX_FILE_SIZE=10485760
S3_ALLOWED_EXTENSIONS='[".jpg", ".jpeg", ".png", ".gif", ".webp", ".pdf", ".doc", ".docx", ".txt"]'

# Email
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true
EMAIL_FROM_ADDRESS="noreply@example.com"
EMAIL_FROM_NAME="FastAPI App"
FRONTEND_URL="http://localhost:3000"
PASSWORD_RESET_EXPIRE_MINUTES=60
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Two-Factor Authentication
TWO_FACTOR_ISSUER_NAME="FastAPI App"
TWO_FACTOR_TOTP_WINDOW=1
TWO_FACTOR_BACKUP_CODES_COUNT=10
