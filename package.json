{
  "name": "fastapi-nextjs-tailwindcss-starter",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "cd apps/backend && uv run uvicorn src.app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "build:frontend": "pnpm --filter frontend build",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "cd apps/backend && uv run pytest --ignore=tests/integration",
    "test:frontend": "pnpm --filter frontend test",
    "test:cov": "pnpm test:cov:backend && pnpm test:cov:frontend",
    "test:cov:backend": "cd apps/backend && uv run pytest --ignore=tests/integration --cov",
    "test:cov:frontend": "pnpm --filter frontend test:cov",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:backend": "cd apps/backend && uv run ruff check .",
    "lint:backend:fix": "cd apps/backend && uv run ruff check . --fix",
    "format": "prettier --write . && cd apps/backend && uv run ruff format .",
    "format:check": "prettier --check .",
    "generate:api": "pnpm --filter @repo/api-client generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ],
    "apps/backend/**/*.py": [
      "uv run --directory apps/backend ruff format",
      "uv run --directory apps/backend ruff check --fix"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  }
}
